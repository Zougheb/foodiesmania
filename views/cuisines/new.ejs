  <% include ../partials/header.ejs %>
  <div class="container">
      <div class="row">
          <h1> Add a New Cuisine</h1>
          <div style="width: 30%; margin:25px auto;">
              <form action="/cuisines" method="post" enctype="multipart/form-data">
                  <div class="form-group">
                       <input class="form-control" type="text" name="cuisine[name]" placeholder="name">
                  </div>
                  <div class="form-group">
                   <label for="image">Image</label>
                   <input type="file" id="image" name="image" accept="image/*" required>
               </div>
                  <div class="form-group">
                     <input class="form-control" type="number" name="cuisine[cost]" placeholder="cost" step="0.01" min="0" required>
                  </div>
                  <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="cuisine[Location]" id="location" placeholder="Lafayette, CA">
                  </div>
                  <div class="form-group">
                     <input class="form-control" type="text" name="cuisine[description]" placeholder="description">
                  </div>
                   <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                   </div>
              </form>
               <a href="/cuisines"> Go Back</a>
          </div>
      </div>
  </div>
  <% include ../partials/footer.ejs %>
