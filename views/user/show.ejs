<% include ../partials/header%>
<div class="row container">
    <div class="col-md-4" id="profile-col1">
        <h3><%= user.username%></h3>
        <div class="thumbnail" id="prof-img-container">
            <img src="<%= user.avatar %>" alt="user profile image" id='avatar'>
            <h3>Profile</h3>
            <h5>Username: <%= user.username%></h5>

            <% if(currentUser && cuisines.length > 0 && cuisines[0].author && cuisines[0].author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>

            <form action="/user/profilePicUpload/<%= user.id%>?_method=PUT" method="post" enctype="multipart/form-data" target='picupload'>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image-file" name="image-file" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload Now" style='visibility:hidden' id='image-profile-upload' />
                </div>
            </form>

            <% }%>
        </div>
    </div>
    <div class="col-md-8" id="profile-col2">
        <h3 id='profile-header' class="w3-circle"><%= user.username %>'s shared photos:</h3>
        <ul class='cuisine-list'><%  cuisines.reverse().forEach(function(cuisine) { %>
            <li>
                <div class="cuisine-info-container">
                    <img class="img-responsive" src="<%= cuisine.image %>">
                    <div class="cuisine-info-cover">
                        <a href="/cuisines/<%= cuisine.id %>"><%= cuisine.name %></a><br>
<!--                         Posted on: <%= moment(cuisines.createdAt).fromNow()  %><br>
 -->                        Location: <%= cuisine.location %><br>
                        Cost: $<%= cuisine.cost %><br>
                    </div>
                </div>
            </li>
            <% }); %>
        </ul>
    </div>
</div>
<iframe id='picupload' style='width:0px;height:0px' name='picupload' ></iframe>
<% include  ../partials/footer%>
<footer class="profile-footer">
    <div>Copyright &copy; 2018 | <span class="footer-brand">Foodsnap<span></div>
</footer>
