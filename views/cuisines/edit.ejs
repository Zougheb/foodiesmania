  <% include ../partials/header %>
  <div class="container">
      <div class="row">
          <h1 style="text-align: center">Edit <%= cuisine.name %></h1>
          <div style="width: 30%; margin: 25px auto;">
              <form action="/cuisines/<%= cuisine._id %>?_method=PUT" method="POST">
                  <div class="form-group">
                      <input class="form-control" type="text" name="cuisine[name]" value="<%= cuisine.name %>">
                  </div>
                  <div class="form-group">
                      <input class="form-control" type="text" name="cuisine[image]" value="<%= cuisine.image %>">
                  </div>
                  <div class="form-group">
                      <label for="cost">Cost</label>
                      <input class="form-control" type="number" name="cuisine[cost]" value="<%= cuisine.cost %>" step="0.01" min="0" required>
                  </div>
                  <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="cuisine[location]" id="location" value="<%= cuisine.location %>">
                  </div>
                  <div class="form-group">
                      <label for="description">Description</label>
                      <input class="form-control" type="text" name="cuisine[description]" value="<%= cuisine.description %>">
                  </div>
                  <div class="form-group">
                      <button class="btn btn-lg btn-primary btn-block">Update!</button>
                  </div>
              </form>
              <a href="/cuisines">Go Back</a>
          </div>
      </div>
  </div>
  <% include ../partials/footer %>
